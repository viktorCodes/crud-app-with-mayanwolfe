<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <h1 data-position="header">May Node and Express be with you.</h1>
    <section data-position="add-quote">
        <h2>Add quote</h2>
  

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
    </section>

   

    <section data-position="update-quote">
    <div>
        <h2>Darth Vader invades!</h2>
        <p>
          Replace first Yoda quote with a quote written by Darth Vader
        </p>
        <button id="update-button">Replace Yoda's quote</button>
      </div>
      </section>

      <section data-position="delete-quote">
      <div>
        <h2>Remove Darth Vader!</h2>
        <p>
          Delete one Darth Vader quote. Does nothing if there are no more Darth
          Vader quote
        </p>
        <button id="delete-button">Delete Darth Vader quote</button>
      </div>
      </section>
      
      <section data-position="quotes">
          
        <h2>Quotes</h2>
<ul class="quotes">
  <!-- Loop through quotes -->
  <% for(var i = 0; i < quotes.length; i++) {%>
    <li class="quote">
      <!-- Output name from the iterated quote object -->
      <span><%= quotes[i].name %></span>:
      <!-- Output quote from the iterated quote object -->
      <span><%= quotes[i].quote %></span>
    </li>
  <% } %>
</ul>


 

  <div id="message"></div>

  <script src="/main.js"></script>
  </body>
</html>